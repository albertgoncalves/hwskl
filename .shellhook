#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -al"
else
    alias open="xdg-open"
fi

export WD=$PWD

for x in bin build; do
    if [ ! -d "$WD/$x" ]; then
        mkdir "$WD/$x"
    fi
done

hsall () {
    find "$WD/src" -type f -name '*.hs' | parallel '
        echo {}
        hlint {}
        ormolu -m inplace {}
        echo ""
    '
}

export FLAGS=(
    -fdiagnostics-color=always
    -fprof-auto
    -outputdir "$WD/build"
    -prof
    -rtsopts
    -Wall
    -Wcompat
    -Werror
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Wmissing-export-lists
    -Wno-unused-top-binds
    -Wpartial-fields
)

runh () {
    handle=$(echo "$1" | sed 's/^[a-z\/]*\/\(.*\)\.[a-z]*$/\1/')
    pin=$PWD
    (
        if [ "$(ls -A "$WD/build")" ]; then
            rm "$WD/build"/*
        fi
        cd "$WD/src" || return
        ghc "${FLAGS[@]}" -o "$WD/bin/$handle" "$handle.hs" || return
        cd "$pin" || return
        if [ -z "$2" ]; then
            "$WD/bin/$handle"
        elif [ "$2" == "profile" ]; then
            "$WD/bin/$handle" +RTS -pa -RTS
        fi
    )
}

checkh () {
    handle=$(echo "$1" | sed 's/^[a-z\/]*\/\(.*\)\.[a-z]*$/\1/')
    (
        cd "$WD/src" || return
        ghc "${FLAGS[@]}" -fno-code "$handle.hs" || return
    )
}

export -f hsall
export -f runh
export -f checkh
alias ormolu="ormolu -m inplace"
