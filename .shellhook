#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -al"
else
    alias open="xdg-open"
fi

hsall () {
    find . -type f -name '*.hs' | parallel '
        echo {}
        hlint {}
        ormolu -m inplace {}
        echo ""
    '
}

export WD=$PWD
export -f hsall
alias runh="runghc -Wall -Werror"
alias ormolu="ormolu -m inplace"
